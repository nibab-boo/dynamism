              <%= link_to "Blogs", blogs_path, class: "dropdown-item rounded-3" %>
              <%= link_to "Albums", albums_path, class: "dropdown-item rounded-3" %>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item rounded-3" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
